{
  "mcpServers": {
    "ai-elements": {
      "type": "http",
      "url": "https://registry.ai-sdk.dev/api/mcp"
    },
    "grep_app": {
      "type": "http",
      "url": "http://localhost:8603/mcp"
    },
    "next-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "next-devtools-mcp@latest"
      ]
    },
    "shadcn": {
      "command": "npx",
      "args": [
        "shadcn@latest",
        "mcp"
      ]
    },
    "convex": {
      "command": "npx",
      "args": [
        "-y",
        "convex@latest",
        "mcp",
        "start"
      ]
    }
  }
}
